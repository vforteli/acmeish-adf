{
	"name": "bricks_with_folders_handle_file",
	"properties": {
		"activities": [
			{
				"name": "Copy data to sink",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "repeish/@{concat('out/bricks_with_folders/', pipeline().parameters.folder_path)}/@{pipeline().parameters.file_name}"
					},
					{
						"name": "Destination",
						"value": "repeish/in/bricks_with_folders/"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": false,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "bricks_with_folders_source",
						"type": "DatasetReference",
						"parameters": {
							"file_path": {
								"value": "@pipeline().parameters.file_name",
								"type": "Expression"
							},
							"folder_path": {
								"value": "@pipeline().parameters.folder_path",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "bricks_with_folders_sink",
						"type": "DatasetReference",
						"parameters": {
							"file_name": {
								"value": "@pipeline().parameters.file_name",
								"type": "Expression"
							},
							"folder_path": {
								"value": "@pipeline().parameters.folder_path",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Move to archive",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Copy data to sink",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "repeish/@{concat('out/bricks_with_folders/', pipeline().parameters.folder_path)}/@{pipeline().parameters.file_name}"
					},
					{
						"name": "Destination",
						"value": "repeish/out/bricks_with_folders_archive/@{concat(pipeline().parameters.folder_path, '/',utcNow('yyyyMMddHHmm'), '_',  pipeline().parameters.file_name)}"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": false,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "bricks_with_folders_source",
						"type": "DatasetReference",
						"parameters": {
							"file_path": {
								"value": "@pipeline().parameters.file_name",
								"type": "Expression"
							},
							"folder_path": {
								"value": "@pipeline().parameters.folder_path",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "bricks_with_folders_archive",
						"type": "DatasetReference",
						"parameters": {
							"file_path": {
								"value": "@concat(pipeline().parameters.folder_path, '/',utcNow('yyyyMMddHHmm'), '_',  pipeline().parameters.file_name)",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"folder_path": {
				"type": "string"
			},
			"file_name": {
				"type": "string"
			}
		},
		"folder": {
			"name": "repeish/bricks_with_folders"
		},
		"annotations": []
	}
}