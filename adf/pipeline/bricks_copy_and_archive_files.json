{
	"name": "bricks_copy_and_archive_files",
	"properties": {
		"description": "copy and archive files in directory",
		"activities": [
			{
				"name": "Copy data to sink",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "bricks_source",
						"type": "DatasetReference",
						"parameters": {
							"file_path": "@pipeline().parameters.source_file_name"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "bricks_sink",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Move to archive",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Copy data to sink",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": true
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "bricks_source",
						"type": "DatasetReference",
						"parameters": {
							"file_path": "@pipeline().parameters.source_file_name"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "bricks_archive",
						"type": "DatasetReference",
						"parameters": {
							"file_path": "@concat(utcNow('yyyyMMddHHmm'), '_', pipeline().parameters.source_file_name)"
						}
					}
				]
			}
		],
		"parameters": {
			"source_file_name": {
				"type": "string",
				"defaultValue": "somefile.txt"
			},
			"source_folder_path": {
				"type": "string"
			}
		},
		"folder": {
			"name": "repeish/bricks"
		},
		"annotations": []
	}
}